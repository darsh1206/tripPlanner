<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <TextView
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Trip planned successfully"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/summary"
        android:layout_below="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Summary"
        />

    <TextView
        android:id="@+id/summaryPoints"
        android:padding="20dp"
        android:layout_below="@id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text=""
        android:textSize="17dp"
        android:lineHeight="25dp"/>

    <TextView
        android:id="@+id/checklist"
        android:layout_below="@+id/summaryPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Checklist"
        />

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_below="@id/checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify passports, visas, and tickets."
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:checked="false" />
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_below="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inform bank, carry multiple payment methods."
        android:checked="false"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="17dp" />
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_below="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Essential clothing, chargers, medications."
        android:checked="false"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="17dp"/>
    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_below="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get vaccinations, carry a first-aid kit."
        android:checked="false"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="17dp"/>
    <CheckBox
        android:id="@+id/checkbox5"
        android:layout_below="@+id/checkbox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm accommodations, know basic local phrases."
        android:checked="false"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="17dp"/>

</RelativeLayout>