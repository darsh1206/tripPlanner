<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <TextView
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Trip planned successfully"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/summary"
        android:layout_below="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Summary"
        />

    <TextView
        android:id="@+id/summaryPoints"
        android:padding="20dp"
        android:layout_below="@id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text=""
        android:textSize="17dp"
        android:lineHeight="25dp"/>

    <TextView
        android:id="@+id/checklist"
        android:layout_below="@+id/summaryPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_background"
        android:layout_margin="20dp"
        android:text="Checklist"
        />

    <ScrollView
        android:layout_below="@id/checklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/checkboxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/fileLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checklist"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Save summary changes to a specified file"
        style="@style/labels"
        android:padding="0dp"

        />

    <LinearLayout
        android:layout_below="@id/fileLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dates_input"
            android:hint="Enter file Name"
            android:padding="@dimen/_10dp"
            android:layout_marginEnd="40dp"
            />
        <Button
            layout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>